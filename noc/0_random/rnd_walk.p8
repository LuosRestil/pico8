--walker

walker={x=0,y=0,col=1}

function walker:new(x,y)
	local w={x=x,y=y}
	setmetatable(w, {__index=self})
	return w
end

function walker:draw()
	pset(self.x,self.y,self.col)
end

function walker:step()
	local xstep=flr(rnd({-1,0,1}))
	local ystep=flr(rnd({-1,0,1}))
	self.x+=xstep
	self.y+=ystep
	self.col+=1
	if (self.col>15) self.col=1
end
