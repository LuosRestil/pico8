function _init()
	cls(1)
	interval=0.1
	acc=interval
	last=0
	mean=64
	std_dev=20
end

function _draw()
	local curr=time()
	acc+=curr-last
	last=curr
	if acc>interval then
		acc-=interval
		local header='mean: '..mean..', std_dev: '..std_dev
		print(header,10,10,7)
		local r=rnd_gauss(mean,std_dev)
		rectfill(0,40,128,50,1)
		print(r,50,44,7)
		circ(r,70,10,6)
	end
end
