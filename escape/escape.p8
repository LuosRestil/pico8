--util
function draw_encoded(s,x,y)
	local basex = x or 0
	local basey = y or 0
	local w=tonum('0x'..sub(s,1,2))
	local h=tonum('0x'..sub(s,3,4))
	local rowpx=w
	local x=basex
	local y=basey
	
	for i=5,#s,4 do
		local clr=-1
		local clrchr=sub(s,i,i)		
		if clrchr ~= 'x' then
			clr=tonum('0x'..clrchr)
		end
		local len=tonum('0x'..sub(s,i+1,i+3))
		while len>=rowpx do
			if clr~=-1 then
				line(x,y,x+rowpx-1,y,clr)
			end
			len=len-rowpx
			rowpx=w
			y=y+1
			x=basex
		end
		if len>0 do
			if clr~=-1 then
				line(x,y,x+len-1,y,clr)
			end
			rowpx=rowpx-len
			x=x+len
		end
	end
end

--string arithmetic
--a is str, b is int
function big_add(a,b)
	printh("add "..a.." + "..b)
	local carry=0
	local res=""
	local to_add=tostr(b)
	local alen=#a
	local blen=#to_add
	local maxlen=max(alen,blen)
	for i=0,maxlen-1 do
		local dig1=sub(
			a,
			max(alen-i,0),
			max(alen-i,0)
		)
		dig1=
			(dig1=="" and "0" or dig1)
		dig1=tonum(dig1)
		printh(dig1)
		local dig2=sub(
			to_add,
			max(blen-i,0),
			max(blen-i,0)
		)
		dig2=
			(dig2=="" and "0" or dig2)
		dig2=tonum(dig2)
		printh(dig2)
		local sum=dig1+dig2+carry
		carry=flr(sum/10)
		res=tostr(sum%10)..res
	end
	if carry > 0 then
		res=tostr(carry)..res
	end
	return res
end
