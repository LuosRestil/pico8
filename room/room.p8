function draw_hitbox(item)
	line(
		item.pos.x,
		item.pos.y,
		item.pos.x+item.w,
		item.pos.y,
		clrs.red)
	line(
		item.pos.x+item.w,
		item.pos.y,
		item.pos.x+item.w,
		item.pos.y+item.h,
		clrs.red)
	line(
		item.pos.x+item.w,
		item.pos.y+item.h,
		item.pos.x,
		item.pos.y+item.h,
		clrs.red)
	line(
		item.pos.x,
		item.pos.y+item.h,
		item.pos.x,
		item.pos.y,
		clrs.red)
