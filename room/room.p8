draw_hitboxes=true

function _init()
	rooms=init_rooms()
	for _,rm in pairs(rooms) do
		for _,item in pairs(rm.items) do
			local lines=split(item.txt,"\n")
			for line in all(lines) do
				assert(#line<26)
			end
		end
	end
	room="start"
end

